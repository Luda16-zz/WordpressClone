<div id="page_wrapper">

	<h1>New Post</h1>

	<%= form_for :post, url: posts_path do |f| %>

		<% if @post.error.any? %>
			<div id="errors">
				<h2><%= pluralize(@post.errors.count, "error")%>Preventing this post from saving</h2> 
				<ul>
					<% @post.error.full_messages.each do |msg| %>
					<li><%= msg %></li>
				</ul>
			</div>
		<% end %>

		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :body %>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>	
		</p>

	<% end %>

</div>